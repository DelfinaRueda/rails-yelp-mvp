<h1>Add a new restaurant</h1>
<%= simple_form_for(@restaurant) do |f| %>

  <%= f.input :name, label: 'Your name please', error: 'No name present' %>
  <%= f.input :address, error: 'No address present' %>
  <%= f.input :category, placeholder: 'italian', error: 'Not a valid option', collection: ["chinese", "italian", "japanese", "french", "belgian"] %>
  <%= f.input :phone_number, placeholder: '07780417253', error: 'Not a valid number' %>
  <%= f.button :submit %>
<% end %>
